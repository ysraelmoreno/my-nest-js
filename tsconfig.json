{
  "ts-node": {
    "require": ["tsconfig-paths/register"]
  },
  "compilerOptions": {
    "target": "es2015",
    "types": ["reflect-metadata"],
    "module": "CommonJS",
    "outDir": "./dist",
    "rootDir": "./src",
    "allowJs": true,
    "lib": ["ES6"],
    "strict": true,
    "esModuleInterop": true,
    "emitDecoratorMetadata": true,
    "baseUrl": "src/",
    "moduleResolution": "Node",
    "paths": {
      "@mozart/*": ["mozart/*"]
    },
    "experimentalDecorators": true
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules"]
}
